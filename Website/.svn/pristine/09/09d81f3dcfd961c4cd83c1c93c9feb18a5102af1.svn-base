/* LESS variables
-------------------------------------------------- */

@links-dark-blue: #003054;
@links-light-blue: #5e9cae;

/* General
-------------------------------------------------- */

body {
	color: #5a5a5a;
}

h1, h2 {
  color: @links-dark-blue;
}

a {
  color: @links-light-blue;
}

/* Buttons */

.btn {
  max-width: 100%;
  overflow: hidden;
  text-align: left;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.btn-primary {
  background-color: @links-light-blue;
  border-color: darken(@links-light-blue, 7%);
  &:hover {
      background-color: darken(@links-light-blue, 7%);
      border-color: darken(@links-light-blue, 17%)
  }
}

/* Header
-------------------------------------------------- */

.navbar-brand { /* Logo */
  padding-top: 12px;
}

.navbar-right li {
  float: left;
}

.navbar-right .fa {
  font-size: 18px;
}

.popover address {
  margin-bottom: 0;
}

/* Navigation
-------------------------------------------------- */

.navbar-wrapper { /* Position nav */
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 20;

  /* Flip around the padding for proper display in narrow viewports */
  .container { 
    padding-left: 0;
    padding-right: 0;
  }
  .navbar {
    padding-left: 15px;
    padding-right: 15px;
  }
}

.navbar-inverse { /* Custom navbar color */
  background-color: @links-dark-blue;
  border: none;
  opacity: .9;

  .navbar-nav > li > a, .navbar-nav > li > a:focus {
    color: @links-light-blue;
  }

  .navbar-nav > li > a:focus:hover {
    color: white;
  }

  .navbar-nav > .dropdown > a .caret {
    border-top-color: @links-light-blue;
    border-bottom-color: @links-light-blue;
  }

  .navbar-nav > .active > a .caret {
    border-top-color: white;
    border-bottom-color: white;
  }

  .navbar-nav > .open > a, .navbar-nav > .open > a:hover, .navbar-nav > .open > a:focus {
    background-color: @links-light-blue;
  }

  .navbar-nav .open .dropdown-menu > li > a, .navbar-nav .open .dropdown-menu > li > a:hover, .navbar-nav .open .dropdown-menu > li > a:focus {
    color: #262626;
  }

  /* Mobile toggle */

  .navbar-toggle, .navbar-toggle:hover, .navbar-toggle:focus {
    border-color: white;
  }
  .navbar-toggle {
    background: transparent;
  }
  .navbar-toggle:hover, .navbar-toggle:focus {
    background-color: white;
    .icon-bar {
      background-color: @links-dark-blue;
    }
  }
}

/* Current section */

.it-support .navbar-left > li:first-child, .web-design .navbar-left > li:nth-child(2), .app-development .navbar-left > li:nth-child(3), .it-staffing .navbar-left > li:nth-child(4), .about-us .navbar-left > li:nth-child(5) {
  > a {
    background-color: darken(@links-light-blue, 5%);
    color: white;
  }
  .caret {
    border-bottom-color: white;
    border-top-color: white;
  }
}

/* Dropdown menu */

.dropdown-menu {
  padding-top: 0;

  .fa {
    color: @links-light-blue;
    font-size: 30px;
    margin-top: .1em;
  }
}

.dropdown-header {
  padding: 13px 20px 7px !important;
}

.navbar-nav .open .dropdown-menu {
  background: white;
  border-radius: 0;
}

.navbar-collapse {
  max-height: none;
}

.dropdown img {
  height: 50px;
  margin-right: 10px;
  width: 50px;
}

/* Homepage main slideshow
-------------------------------------------------- */

#main-slideshow {
  height: 350px;
  margin-bottom: 60px;

  .carousel-inner {
    .item {
      background: url(../img/group-sky-diving-sm.jpg) no-repeat center center;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      height: 350px; /* Declare heights because of positioning of img element */

      &:nth-child(2) {
        background-image: url(../img/surfing-sm.jpg);
      }

      &:nth-child(3) {
        background-image: url(../img/rock-climbing-sm.jpg);
      }

      &:nth-child(4) {
        background-image: url(../img/gold-medal-runner-sm.jpg);
      }

      &:nth-child(5) {
        background-image: url(../img/sharks-sm.jpg);
      }

      a {
        display: block;
        height: 100%;
        width: 100%;
      }
    }
  }
}

.carousel a:focus {
  outline-style: none;
}

.carousel-control.left, .carousel-control.right {
  background-image: none;
}

.carousel-control:focus {
  background-image: none !important;
}

/* Four homepage callouts
-------------------------------------------------- */

.marketing {

  h2 {
    font-weight: normal;
  }

  /* Center align the text within the three columns below the carousel */
  article {
    margin-bottom: 60px;
    text-align: center;
    &:last-child {
      margin-bottom: 0;
    }
  }

  .col-lg-4 p {
    margin-left: 10px;
    margin-right: 10px;
  }

  .fa {
    color: @links-light-blue;
    font-size: 45px;
  }
}

/* Homepage features below four callouts
-------------------------------------------------- */

.featurette {
  text-align: center;
} 

.featurette-divider {
  margin: 60px 0;
}

.featurette-heading {
  line-height: 1;
  margin-top: 0;
}

#blog img {
  margin-top: 20px;
}

/* Quotes slideshow (carousel)
-------------------------------------------------- */

#quotes {
  blockquote {
    border-left: 0;
    padding: 0;
  }
}

.banner small {
    color: white;
}

.home #quotes {
  .item {
    background-color: white;
    height: 270px;
  }

  .carousel-indicators li {
    border-color: #5a5a5a;
    &.active {
      background-color: #5a5a5a;
    }
  }

  .carousel-caption {
    color: inherit;
    left: 10%;
    right: 10%;
    text-shadow: none;
    top: 0;
  }

  p {
    font-size: 16px;
  }

  small {
    font-size: 13px;
  }
}

/* Subpage level 1 banner
-------------------------------------------------- */

.banner {
  background-color: #ccc;
  height: 320px;
  position: relative;
  text-align: center;

  h1 {
    bottom: -16px;
    color: white;
    font-size: 30px;
    position: absolute;
    text-align: center;
    text-transform: uppercase;
    width: 100%;
  }
}

/* Main content
-------------------------------------------------- */

main {
  .btn {
    margin-bottom: 4px;
  }

  img {
    max-width: 100%;
  }
}

.level-2 main {
  margin-top: 70px;

  h2:first-child {
    margin-top: 0;
  }
}

.tab-content > .tab-pane {
  padding: 30px 0;
}


/* Level 1 section callouts (services with icons)
-------------------------------------------------- */

.services {
  h2 {
    font-size: 18px;
    margin-top: 0;
  }

  .media {
    padding: 30px 30px 0;

    &:first-child {
      margin-top: 15px;
    }
  }
}

.level-1 .banner {
  background: url(../img/group-sky-diving-no-cta-sm.jpg) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.it-support.level-1 .banner {
  background-image: url(../img/group-sky-diving-no-cta-sm.jpg);
}

.web-design.level-1 .banner {
  background-image: url(../img/surfing-no-cta-sm.jpg);
}

.app-development.level-1 .banner {
  background-image: url(../img/rock-climbing-no-cta-sm.jpg);
}

.it-staffing.level-1 .banner {
  background-image: url(../img/gold-medal-runner-no-cta-sm.jpg);
}

.about.level-1 .banner {
  background-image: url(../img/it-help-desk-support-banner-no-cta-sm.jpg);
}

/* Level 2 subpages
-------------------------------------------------- */

a.list-group-item.active, a.list-group-item.active:hover, a.list-group-item.active:focus {
  background-color: @links-dark-blue;
  border-color: darken(@links-dark-blue, 7%);
}

/* Sidebar
-------------------------------------------------- */

aside {
  margin-top: 30px;

  .fa {
    margin-right: 5px;
  }
}

/* Footer
-------------------------------------------------- */

footer, footer.well {
  margin: 30px 0 15px;
  text-align: center;
}

footer p {
  margin-bottom: 0;
  width: 100%;
}

/* Media Queries
-------------------------------------------------- */

@media (min-width: 768px) {

  .navbar-toggle {
    display: block;
  }

  .navbar-nav>li {
    float: none;
  }

  .navbar-left {
    float: none !important;
  }

  .navbar-right {
    float: none !important;
    li {
      float: left;
    }
  }

  .container > .navbar-header {
    float: none;
    margin-right: 15px;
  }

  .container > .navbar-collapse {
    border-top: 1px solid #101010;
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
    margin-left: -15px;
    padding-right: 0;
    -webkit-overflow-scrolling: touch;
    width: 100%;
  }

  .navbar-collapse.collapse {
    display: none !important;
  }

  .navbar-collapse.in {
    overflow-y: visible;
  }

  /* Navbar positioning foo */
  .navbar-wrapper {
    margin-top: 20px;
  }
  .navbar-wrapper .container {
    padding-left:  15px;
    padding-right: 15px;
  }
  .navbar-wrapper .navbar {
    padding-left:  0;
    padding-right: 0;
  }

  .navbar-wrapper .navbar { /* Round the corner after being detached from the top. */
    border-radius: 4px;

  }

  .navbar-nav .open .dropdown-menu {
    background: white;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    float: none;
    position: static;
  }

  .navbar-collapse .navbar-nav.navbar-right:last-child {
    margin-right: 0;
  }
  
  /* Slideshow */
  .carousel-caption {

      p {
        margin-bottom: 20px;
        line-height: 1.4;
      }
  }

  #main-slideshow {
    height: 500px;

    .carousel-inner {
      .item {
        background-image: url(../img/group-sky-diving.jpg);
        height: 500px;

        &:nth-child(2) {
          background-image: url(../img/surfing.jpg);
        }

        &:nth-child(3) {
          background-image: url(../img/rock-climbing.jpg);
        }

        &:nth-child(4) {
          background-image: url(../img/gold-medal-runner.jpg);
        }

        &:nth-child(5) {
          background-image: url(../img/sharks.jpg);
        }
      }

      .carousel-caption {
        line-height: 1.75em;
        text-shadow: 2px 2px 3px rgba(0,0,0,.7);
        filter: dropshadow(color="000", offx=2, offy=4);

        h1 {
          font-size: 36px;
        }

        p {
          font-size: 23px;
        }
      }
    }
  }

  .featurette-heading {
    font-size: 50px;
  }

  /* Four homepage callouts  */

  .marketing {    
    article {
      margin-bottom: 0;
    }

    h2 {
      font-size: 20px;
    }
  }

  /* Quotes slideshow (carousel) */

  .home #quotes {
    .carousel-caption {
      bottom: auto;
      left: 20%;
      padding-top: 70px;
      right: 20%;
    }

    .carousel-indicators {
      bottom: 70px;
    }

    .item {
      height: 410px;
    }

    blockquote {
      p {
        font-size: 21px;
      }

      small {
        font-size: 15px;
      }
    }
  }

  /* Main content */

  .banner h1 {
    bottom: -23px;
    font-size: 70px;
  }

  .level-2 main {
    margin-top: 90px;
  }

  /* Section level 1 banners */

  .level-1 .banner {
    background: url(../img/group-sky-diving-no-cta.jpg) no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }

  .it-support.level-1 .banner {
    background-image: url(../img/group-sky-diving-no-cta.jpg);
  }

  .web-design.level-1 .banner {
    background-image: url(../img/surfing-no-cta.jpg);
  }

  .app-development.level-1 .banner {
    background-image: url(../img/rock-climbing-no-cta.jpg);
  }

  .it-staffing.level-1 .banner {
    background-image: url(../img/gold-medal-runner-no-cta.jpg);
  }

  .about.level-1 .banner {
    background-image: url(../img/it-help-desk-support-banner-no-cta.jpg);
  }

  /* Footer */

  footer {

    p {
      width: auto;
    }

    .contact-info {
      float: left;
    }
  }
}

@media (min-width: 769px) {

  /* Blog */

  #blog img {
    margin-top: 0;
  }

  /* Quotes slideshow */

  .home #quotes {
    .item {
      height: 470px;
    }

    .carousel-caption {
      padding-top: 110px;
    }
  }

}

@media (min-width: 992px) {

  .navbar-toggle {
    display: none;
  }

  .container > .navbar-header {
    float: left;
    margin-right: 0;
  }

  .container > .navbar-collapse {
    border-top: 0;
    box-shadow: none;
    margin-left: 0;
    padding-right: 15px;
  }

  .navbar-collapse.collapse {
    display: block !important;
  }

  .navbar-collapse.in {
    overflow-y: auto;
  }

  .navbar-collapse .navbar-nav.navbar-left:first-child {
    margin-left: 0;
  }

  .navbar-nav > li > .dropdown-menu {
    width: 491px;
  }

  .navbar-nav .open .dropdown-menu {
    border-radius: 4px;
    border-top-left-radius: 0;
    border-rop-right-radius: 0;
    float: left;
    position: absolute;
  }

  .navbar-left {
    float: left !important;
  }

  .navbar-right {
    float: right !important;
  }

  .navbar-nav > li {
    float: left;
  }

  .featurette-heading {
    margin-top: 120px;
  }

  .marketing h2 {
    font-size: 30px;
  }

  .services h2 {
    font-size: 20px;
  }

  footer {
    
    p {
      width: auto;
    }

    .contact-info {
      float: none;
      text-align: right;
    }
  }

}